        <a href="<?php echo $block->escapeUrl($category->getUrl()) ?>">
            <h2 class="mpamp-category-title"><?php echo $block->escapeHtml($category->getName()) ?></h2>
            <?php $counter++ ?>
        </a>
    </div>
<?php
endforeach;
?>
</div>