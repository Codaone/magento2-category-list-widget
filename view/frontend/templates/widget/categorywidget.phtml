<?php
	$categories = $this->getCategoryCollection();
	$canShowImg = $this->canShowImage();
?>
<div class="mpamp-categories">
<?php (count($categories) % 2 != 0) ? $lastOddClass = "last-odd" : $lastOddClass = "" ?>
